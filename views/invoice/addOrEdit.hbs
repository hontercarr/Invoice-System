<h3>{{viewTitle}}</h3>

<form action="/invoice" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{invoice._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{invoice.fullName}}">
        <div class="text-danger">
            {{invoice.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{invoice.email}}">
        <div class="text-danger">
            {{invoice.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{invoice.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{invoice.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/invoice/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
